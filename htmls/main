  <link rel="stylesheet" href="main.css" />
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js"></script>
  <![endif]-->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
   <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
   <script>
     axios.get('https://ch30tnydq2.execute-api.ap-northeast-2.amazonaws.com/default/articles')
     .then(res => {
       $('.loading-msg').hide();
       $('.list-title').show();
       res.data.articles.sort((a, b) => parseInt(a.article_num.N) - parseInt(b.article_num.N)).forEach(a => {
         if (a.kr_title)
           $('#kr-articles-list').append(`<li><a href="./kr_${a.article_num.N}_${a.kr_latest.N}">${a.kr_title.S}</a></li>`);
         if (a.en_title)
           $('#kr-articles-list').append(`<li><a href="./en_${a.article_num.N}_${a.en_latest.N}">${a.en_title.S}</a></li>`);
       });
     });
   </script>
